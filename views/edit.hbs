<form action="/restaurants/{{ restaurant._id}}?_method=PUT" method="POST" style="margin: 20px 20px;">
  <div class="form-row">
    <div class="col-md-4 mb-3">
      <label>Name-CHT</label>
      <input type="text" class="form-control" placeholder="name" name="name" value="{{restaurant.name}}" required>
    </div>
    <div class="col-md-4 mb-3">
      <label for="validationServer02">Name-EN</label>
      <input type="text" class="form-control" placeholder="name-en" name="name_en" value="{{restaurant.name_en}}">
    </div>
    <div class="col-md-4 mb-3">
      <label>Phone</label>
      <input type="text" class="form-control" placeholder="phone" name="phone" value="{{restaurant.phone}}" required>
    </div>
    <div class="col-md-4 mb-3">
      <label>Image</label>
      <input type="text" class="form-control" placeholder="image" name="image" value="{{restaurant.image}}" required>
    </div>
    <div class="col-md-4 mb-3">
      <label>Location</label>
      <input type="text" class="form-control" placeholder="location" name="location" value="{{restaurant.location}}"
        required>
    </div>
    <div class="col-md-4 mb-3">
      <label>google_map</label>
      <input type="text" class="form-control" placeholder="google_map" name="google_map"
        value="{{restaurant.google_map}}">
    </div>
    <div class="col-md-4 mb-3">
      <label>Rating</label>
      <input type="number" class="form-control" placeholder="rating" name="rating" value="{{restaurant.rating}}" min="0"
        max="10" step="0.1" required>
    </div>
    <div class="col-md-4 mb-3">
      <label>Description</label>
      <input type="text" class="form-control" placeholder="description" name="description"
        value="{{restaurant.description}}" required>
    </div>
  </div>
  <div class="form-group">
    <select class="custom-select" name="category" value="{{restaurant.category}}" required>
      <option value="">Category menu</option>
      <option value="台式料理" {{#setSelected restaurant.category "台式料理"}}{{/setSelected}}>台式料理 </option>
      <option value="日本料理" {{#setSelected restaurant.category "日本料理"}}{{/setSelected}}>日本料理</option>
      <option value="義式餐廳" {{#setSelected restaurant.category "義式餐廳"}}{{/setSelected}}>義式餐廳</option>
      <option value="美式餐廳" {{#setSelected restaurant.category "美式餐廳"}}{{/setSelected}}>美式餐廳</option>
      <option value="酒吧" {{#setSelected restaurant.category "酒吧"}}{{/setSelected}}>酒吧</option>
      <option value="咖啡廳" {{#setSelected restaurant.category "咖啡廳"}}{{/setSelected}}>咖啡廳</option>
      <option value="中東料理" {{#setSelected restaurant.category "中東料理"}}{{/setSelected}}>中東料理</option>
      <option value="異國料理" {{#setSelected restaurant.category "異國料理"}}{{/setSelected}}>異國料理</option>
    </select>
  </div>
  <button type="submit" class="btn btn-info">Save</button>
  <a href="/" class="btn btn-info">Back</a>
</form>