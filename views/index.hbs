<header>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">您最愛的美食，由 吸腹 為您外送
        </h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{ keyword }}" class="form-control" placeholder="輸入餐廳"
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </form>
      <div class="function" style="display: flex;">
        <form action="/sort" method="get">
          <select class="input-group-prepend" name="sort" id="select" onchange="this.form.submit()">
            <option value="">Sort</option>
            <option value="name" {{#setSelected sort "name"}} selected {{/setSelected}}>A->Z</option>
            <option value="-name" {{#setSelected sort "-name"}} selected {{/setSelected}}>Z->A</option>
            <option value="category" {{#setSelected sort "category"}} selected {{/setSelected}}>類別</option>
            <option value="location" {{#setSelected sort "location"}} selected {{/setSelected}}>地區</option>
            <option value="rating" {{#setSelected sort "rating"}} selected {{/setSelected}}>星級</option>
          </select>
        </form>
        <form action="./restaurants/new" style="margin:0px 10px;">
          <button type="text" class="btn btn-info">Create</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="./restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fa fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fa fa-star fa-xs"></i>
              </span>
            </div>
            <div style="display:flex;justify-content: space-around;margin-bottom: 10px;">
              <form action="./restaurants/{{ this._id }}/edit" style="display: inline;">
                <button type="text" class="btn btn-info">edit</button>
              </form>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">delete</button>
            </div>

            </form>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>