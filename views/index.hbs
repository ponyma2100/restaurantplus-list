<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的外送餐廳清單
      </a>
      <form action="./restaurants/new" style="display: inline;">
        <button type="text" class="btn btn-info">Create</button>
      </form>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">您最愛的美食，由 吸腹 為您外送
        </h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{ keyword }}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="./restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fa fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fa fa-star fa-xs"></i>
              </span>
            </div>
            <div style="display:flex;justify-content: space-around;margin-bottom: 10px;">
              <form action="./restaurants/{{ this._id }}/edit" style="display: inline;">
                <button type="text" class="btn btn-info">edit</button>
              </form>
              <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger">delete</button>
            </div>

            </form>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>